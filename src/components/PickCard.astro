---
interface Props {
  rank: number;
  name: string;
  image?: string;
  verdict: string;
  price: number;
  rating: number;
  pros: string[];
  cons: string[];
  buyLink: string;
  buyText?: string;
  badge?: string;
}

const { 
  rank, 
  name, 
  image, 
  verdict, 
  price, 
  rating, 
  pros, 
  cons, 
  buyLink, 
  buyText = 'Check Price on Amazon',
  badge 
} = Astro.props;

const rankColors: Record<number, string> = {
  1: 'bg-yellow-400 text-gray-900',
  2: 'bg-gray-300 text-gray-900',
  3: 'bg-orange-400 text-white'
};
---

<div class="bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow" id={`pick-${rank}`}>
  <!-- Image Section with Badges -->
  <div class="relative">
    {image ? (
      <div class="aspect-[4/3] bg-gray-50 flex items-center justify-center p-6">
        <img 
          src={image} 
          alt={name}
          class="max-w-full max-h-full object-contain"
          loading="lazy"
          width="400"
          height="300"
        />
      </div>
    ) : (
      <div class="aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#9CA3AF" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
      </div>
    )}
    
    <!-- Rank Badge - Top Right -->
    <div class="absolute top-3 right-3 z-10">
      <span class={`inline-flex items-center justify-center w-10 h-10 ${rankColors[rank] || 'bg-gray-100 text-gray-700'} font-bold text-lg rounded-full shadow-md border-2 border-white`}>
        #{rank}
      </span>
    </div>
    
    <!-- Award Badge - Top Left -->
    {badge && (
      <div class="absolute top-3 left-3 z-10">
        <span class="inline-flex items-center px-3 py-1.5 bg-[#2563EB] text-white text-xs font-bold uppercase tracking-wider rounded-full shadow-md">
          {badge}
        </span>
      </div>
    )}
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-2">{name}</h3>
    
    <!-- Price & Rating -->
    <div class="flex items-center gap-4 mb-4">
      <span class="text-2xl font-bold text-[#2563EB]">${price.toFixed(2)}</span>
      <div class="flex items-center gap-1">
        <span class="font-bold text-gray-900">{rating.toFixed(1)}</span>
        <div class="flex text-yellow-400">
          {Array.from({ length: 5 }).map((_, i) => (
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill={i < Math.floor(rating) ? "currentColor" : "none"} stroke="currentColor" stroke-width="2">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
            </svg>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Verdict -->
    <p class="text-gray-700 mb-6 leading-relaxed">{verdict}</p>
    
    <!-- Pros -->
    {pros.length > 0 && (
      <div class="mb-4">
        <h4 class="text-sm font-semibold text-green-700 uppercase tracking-wider mb-2">Pros</h4>
        <ul class="space-y-1">
          {pros.map(pro => (
            <li class="flex items-start gap-2 text-sm text-gray-700">
              <svg class="flex-shrink-0 mt-0.5 text-green-500" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              {pro}
            </li>
          ))}
        </ul>
      </div>
    )}
    
    <!-- Cons -->
    {cons.length > 0 && (
      <div class="mb-6">
        <h4 class="text-sm font-semibold text-red-700 uppercase tracking-wider mb-2">Cons</h4>
        <ul class="space-y-1">
          {cons.map(con => (
            <li class="flex items-start gap-2 text-sm text-gray-700">
              <svg class="flex-shrink-0 mt-0.5 text-red-500" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
              {con}
            </li>
          ))}
        </ul>
      </div>
    )}
    
    <!-- CTA Button -->
    <a 
      href={buyLink}
      target="_blank"
      rel="noopener noreferrer sponsored"
      class="flex items-center justify-center w-full px-6 py-3 bg-[#2563EB] hover:bg-[#1D4ED8] text-white font-semibold rounded-lg transition-colors min-h-[48px]"
      style="color: #ffffff;"
    >
      <span style="color: #ffffff;">{buyText}</span>
      <svg class="ml-2 flex-shrink-0" style="color: #ffffff;" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  </div>
</div>

---
const navItems = [
  { label: 'Reviews', href: '/categories/' },
  { label: 'Methodology', href: '/methodology/' },
  { label: 'About', href: '/about/' },
];
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
  <div class="container">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-gray-900 hover:no-underline">
        <span class="text-[#2563EB]">Boring</span>
        <span>Best</span>
      </a>
      
      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class="text-sm font-medium text-gray-600 hover:text-[#2563EB] transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Search Button (Mobile & Desktop) -->
      <div class="flex items-center gap-4">
        <button 
          type="button"
          class="p-2 text-gray-600 hover:text-[#2563EB] transition-colors"
          aria-label="Search"
          id="search-trigger"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
        </button>
        
        <!-- Mobile Menu Button -->
        <button 
          type="button"
          class="md:hidden p-2 text-gray-600 hover:text-[#2563EB] transition-colors"
          aria-label="Menu"
          id="mobile-menu-trigger"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Nav -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-100">
      <div class="flex flex-col gap-2 pt-4">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class="text-sm font-medium text-gray-600 hover:text-[#2563EB] py-2 transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileTrigger = document.getElementById('mobile-menu-trigger');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileTrigger?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Search trigger (placeholder for now)
  const searchTrigger = document.getElementById('search-trigger');
  searchTrigger?.addEventListener('click', () => {
    window.location.href = '/search';
  });
</script>

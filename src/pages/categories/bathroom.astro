---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/TrustBar.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';

const title = 'Best Bathroom Products 2026 - Reviews & Buying Guides';
const description = 'Expert reviews of bathroom essentials including toilet plungers, shower curtain liners, and more. Tested for durability and performance.';

const reviews = [
  {
    title: 'Best Toilet Plungers',
    slug: 'best-toilet-plungers',
    description: 'After testing 12 plungers over 47 hours, we found the one that actually works every time.',
    testingHours: 47,
    productsTested: 12,
    rating: 4.8,
    image: '/images/plunger.jpg'
  },
  {
    title: 'Best Shower Curtain Liners',
    slug: 'best-shower-curtain-liners',
    description: 'We tested 15 liners for mold resistance, durability, and eco-friendliness.',
    testingHours: 38,
    productsTested: 15,
    rating: 4.6,
    image: '/images/shower-liner.jpg'
  }
];

const comingSoon = [
  'Shower Caddies',
  'Toilet Brushes',
  'Bath Mats',
  'Soap Dispensers',
  'Toilet Paper Holders'
];

const breadcrumbs = [
  { label: 'Categories', href: '/categories/' },
  { label: 'Bathroom' }
];
---

<BaseLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <section class="py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Bathroom Reviews</h1>
    <p class="text-xl text-gray-600 mb-8 max-w-3xl">
      Expert reviews of bathroom essentials. We test for durability, performance, and value so you can buy with confidence.
    </p>
    
    <TrustBar 
      testingHours={85}
      productsTested={27}
      lastUpdated="2026-02-08"
    />
  </section>
  
  <!-- Published Reviews -->
  <section class="py-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Published Reviews</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {reviews.map((review) => (
        <a 
          href={`/reviews/${review.slug}/`}
          class="group bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-lg hover:border-[#2563EB] transition-all"
        >
          <div class="aspect-[2/1] bg-gray-100 flex items-center justify-center">
            <div class="text-gray-400 text-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="mx-auto mb-2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
              </svg>
              <span class="text-sm">Product Image</span>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-[#2563EB] transition-colors">
              {review.title}
            </h3>
            <p class="text-gray-600 mb-4">{review.description}</p>
            <div class="flex items-center justify-between pt-4 border-t border-gray-100">
              <div class="flex items-center gap-4 text-sm text-gray-500">
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {review.testingHours} hrs
                </span>
                <span>{review.productsTested} products</span>
              </div>
              <div class="flex items-center gap-1">
                <span class="font-bold text-gray-900">{review.rating}</span>
                <div class="flex text-yellow-400">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill={i < Math.floor(review.rating) ? "currentColor" : "none"} stroke="currentColor" stroke-width="2">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
  
  <!-- Coming Soon -->
  <section class="py-8 border-t border-gray-200">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Reviews Coming Soon</h2>
    <div class="flex flex-wrap gap-3">
      {comingSoon.map((item) => (
        <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-full">
          {item}
        </span>
      ))}
    </div>
    <p class="text-gray-600 mt-4">
      Want to know when we publish these reviews? <a href="/newsletter/" class="text-[#2563EB] hover:underline">Subscribe to our newsletter</a>.
    </p>
  </section>
  
  <!-- Newsletter -->
  <section class="py-12 border-t border-gray-200">
    <NewsletterForm 
      variant="inline"
      title="Get Bathroom Reviews First"
      description="Be the first to know when we publish new bathroom product reviews."
    />
  </section>
</BaseLayout>

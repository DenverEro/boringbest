---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';

const title = 'Home Improvement Reviews - Coming Soon';
const description = 'Expert reviews of home improvement tools and supplies coming soon. Sign up for our newsletter to be notified.';

const comingSoon = [
  'Paint Rollers',
  'Painter\'s Tape',
  'Drop Cloths',
  'Sandpaper',
  'Caulk Guns',
  'Putty Knives'
];

const breadcrumbs = [
  { label: 'Categories', href: '/categories/' },
  { label: 'Home Improvement' }
];
---

<BaseLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <section class="py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Home Improvement Reviews</h1>
    <p class="text-xl text-gray-600 mb-8 max-w-3xl">
      Expert reviews of home improvement tools and supplies. Coming soonâ€”sign up to be notified when we publish our first reviews.
    </p>
    
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-8 text-center mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Reviews Coming Soon</h2>
      <p class="text-gray-700 mb-6">
        We are currently testing home improvement products. Join our newsletter to be the first to know when we publish.
      </p>
      <a 
        href="/newsletter/"
        class="inline-flex items-center gap-2 px-6 py-3 bg-[#2563EB] hover:bg-[#1D4ED8] text-white font-semibold rounded-lg transition-colors"
      >
        Get Notified
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </a>
    </div>
    
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Planned Reviews</h2>
    <div class="flex flex-wrap gap-3">
      {comingSoon.map((item) => (
        <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-full">
          {item}
        </span>
      ))}
    </div>
  </section>
  
  <!-- Newsletter -->
  <section class="py-12 border-t border-gray-200">
    <NewsletterForm 
      variant="inline"
      title="Get Home Improvement Reviews First"
      description="Be the first to know when we publish new home improvement reviews."
    />
  </section>
</BaseLayout>

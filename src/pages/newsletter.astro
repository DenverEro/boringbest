---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterForm from '../components/NewsletterForm.astro';

const title = 'Newsletter - Get Weekly Reviews';
const description = 'Subscribe to the Boring Best newsletter for weekly reviews of everyday essentials delivered to your inbox.';

const breadcrumbs = [{ label: 'Newsletter' }];

const pastIssues = [
  {
    date: 'February 5, 2026',
    title: 'Best Toilet Plungers: The Complete Guide',
    description: 'After 47 hours of testing, here is what actually works.',
    slug: 'best-toilet-plungers'
  },
  {
    date: 'January 29, 2026',
    title: 'Shower Curtain Liners That Actually Resist Mold',
    description: 'We tested 15 liners for 8 weeks. Here are the winners.',
    slug: 'best-shower-curtain-liners'
  },
  {
    date: 'January 22, 2026',
    title: 'Extension Cords: Safety First',
    description: '20 cords tested for safety and performance.',
    slug: 'best-extension-cords'
  }
];
---

<BaseLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <section class="py-12">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">The Boring Best Newsletter</h1>
      <p class="text-xl text-gray-600">
        Weekly reviews of everyday essentials delivered to your inbox. No spam, just the products that actually work.
      </p>
    </div>
    
    <!-- Newsletter Hero Form -->
    <div class="max-w-2xl mx-auto mb-16">
      <NewsletterForm 
        variant="hero"
        title="Never Buy the Wrong Product Again"
        description="Join 2,000+ readers who get our weekly reviews. We test the boring stuff so you don't have to."
      />
    </div>
    
    <!-- What You Get -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">Weekly Reviews</h3>
        <p class="text-gray-600">One thoroughly tested product review delivered every Tuesday.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">Honest & Independent</h3>
        <p class="text-gray-600">No sponsored content. We buy every product ourselves.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <h3 class="font-bold text-gray-900 mb-2">Reader Q&A</h3>
        <p class="text-gray-600">Monthly Q&A where we answer your product questions.</p>
      </div>
    </div>
    
    <!-- Past Issues -->
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Recent Newsletter Issues</h2>
      
      <div class="space-y-4">
        {pastIssues.map((issue) => (
          <a 
            href={`/reviews/${issue.slug}/`}
            class="flex items-start gap-4 p-4 bg-gray-50 hover:bg-blue-50 rounded-lg transition-colors group"
          >
            <div class="flex-shrink-0 w-16 text-center">
              <div class="text-xs text-gray-500 uppercase tracking-wider">
                {new Date(issue.date).toLocaleDateString('en-US', { month: 'short' })}
              </div>
              <div class="text-2xl font-bold text-[#2563EB]">
                {new Date(issue.date).getDate()}
              </div>
            </div>
            <div class="flex-1">
              <h3 class="font-bold text-gray-900 group-hover:text-[#2563EB] transition-colors mb-1">
                {issue.title}
              </h3>
              <p class="text-gray-600 text-sm">{issue.description}</p>
            </div>
            <svg class="flex-shrink-0 text-gray-400 group-hover:text-[#2563EB] transition-colors mt-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        ))}
      </div>
    </div>
    
    <!-- FAQ -->
    <div class="max-w-3xl mx-auto mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Common Questions</h2>
      
      <div class="space-y-4">
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">How often will you email me?</h3>
          <p class="text-gray-600 text-sm">We send one email per week (every Tuesday) with a new product review. Occasionally, we will send a second email with price drop alerts or time-sensitive deals.</p>
        </div>
        
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">Is the newsletter free?</h3>
          <p class="text-gray-600 text-sm">Yes, completely free. We will never charge for our newsletter. We make money through affiliate links when you purchase products we recommend.</p>
        </div>
        
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">How do I unsubscribe?</h3>
          <p class="text-gray-600 text-sm">Every email has an unsubscribe link at the bottom. Click it and you will be removed immediatelyâ€”no questions asked.</p>
        </div>
        
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">Will you share my email?</h3>
          <p class="text-gray-600 text-sm">Never. Your email address is safe with us. We do not sell, rent, or share subscriber data with anyone.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

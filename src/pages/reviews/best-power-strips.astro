---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustBar from '../../components/TrustBar.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';

const title = 'Best Power Strips of 2026: Surge Protection Tested';
const description = 'We surge protection tested 18 power strips with USB charging. Our top pick protects your electronics and charges devices fast.';
const publishedDate = '2026-01-08';
const lastUpdated = '2026-02-08';

const breadcrumbs = [
  { label: 'Reviews', href: '/categories/' },
  { label: 'Home Office', href: '/categories/home-office/' },
  { label: 'Power Strips' }
];
---

<BaseLayout 
  title={title}
  description={description}
  type="article"
  publishedDate={publishedDate}
  modifiedDate={lastUpdated}
  breadcrumbs={breadcrumbs}
>
  <section class="py-12 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      {description}
    </p>
  </section>
  
  <TrustBar 
    testingHours={35}
    productsTested={18}
    lastUpdated={lastUpdated}
  />
  
  <section class="py-12">
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Full Review Coming Soon</h2>
      <p class="text-gray-700 mb-6">
        We are currently finalizing our comprehensive power strip review. Join our newsletter to be notified when it is published.
      </p>
      <NewsletterForm 
        variant="inline"
        title="Get Notified When This Review Publishes"
        description="Be the first to read our in-depth power strip testing results."
      />
    </div>
  </section>
  
  <!-- Affiliate Disclosure -->
  <div class="bg-gray-100 rounded-lg p-4 mt-8 text-sm text-gray-600">
    <strong>Affiliate Disclosure:</strong> Boring Best is a participant in the Amazon Services LLC Associates Program, an affiliate advertising program designed to provide a means for sites to earn advertising fees by advertising and linking to Amazon.com.
  </div>
</BaseLayout>
